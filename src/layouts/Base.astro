---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Kevin Suckiel', description = 'Senior Offensive Security Professional — Reverse Engineering, Exploit Development, Red Team Operations.' } = Astro.props;
const pageTitle = title === 'Kevin Suckiel' ? title : `${title} — Kevin Suckiel`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={description} />
  <meta name="author" content="Kevin Suckiel" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:creator" content="@0xsu3ks" />
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html>
